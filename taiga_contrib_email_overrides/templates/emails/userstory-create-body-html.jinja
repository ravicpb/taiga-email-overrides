{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, ref=snapshot.ref, subject=snapshot.subject, url=resolve_front_url("userstory", project.slug, snapshot.ref) %}
    <h1>New Post created</h1>
    <p>Hello {{ user }},<br />{{ changer }} has created a new Post on {{ project }}</p>
    <p>Post #{{ ref }} {{ subject }}</p>
    <a class="button" href="{{ url }}" title="See Post #{{ ref }} {{ subject }}">See Post</a>
    <p><small>The Calendar.ly Team</small></p>
    {% endtrans %}
{% endblock %}
