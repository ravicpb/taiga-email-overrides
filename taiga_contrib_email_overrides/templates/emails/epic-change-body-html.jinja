{% extends "emails/updates-body-html.jinja" %}

{% block head %}
    {% trans user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, ref=snapshot.ref, subject=snapshot.subject, url=resolve_front_url("Topic", project.slug, snapshot.ref) %}
    <h1>Topic updated</h1>
    <p>Hello {{ user }}, <br> {{ changer }} has updated a Topic on {{ project }}</p>
    <p>Topic #{{ ref }} {{ subject }}</p>
    <a class="button" href="{{ url }}" title="See Topic #{{ ref }}: {{ subject }} in Calendar.ly">See Topic</a>
    {% endtrans %}
{% endblock %}
