{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, ref=snapshot.ref, subject=snapshot.subject, url=resolve_front_url("epic", project.slug, snapshot.ref) %}
    <h1>New Topic created</h1>
    <p>Hello {{ user }},<br />{{ changer }} has created a new Topic on {{ project }}</p>
    <p>Topic #{{ ref }} {{ subject }}</p>
    <a class="button" href="{{ url }}" title="See Topic #{{ ref }} {{ subject }}">See Topic</a>
    <p><small>The Calendar.ly Team</small></p>
    {% endtrans %}
{% endblock %}
