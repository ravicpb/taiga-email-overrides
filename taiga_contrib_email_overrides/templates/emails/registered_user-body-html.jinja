{% extends "base/hero-body-html.jinja" %}

{% block body %}
<table border="0" width="100%" cellpadding="0" cellspacing="0" class="table-body">
    <tr>
        {% trans %}
        <td>
            <h2>Thank you for registering in Calendar.ly</h2>
            <h3>We hope you enjoy it</h3>
            <p>Calendar.ly's aim is to make the content creation process easy and streamlined in order to enable you to react with speed when the scenarios change.</p>
            <p>We built it to infuse order, simplicity and full transparency for all team members and stakeholders.</p>
            <small>The Calendar.ly Team</small>
        </td>
        {% endtrans %}
    </tr>
</table>
{% endblock %}

{% block footer %}
    {{ super() }}
    <br />
    <br />
    {% trans url=resolve_front_url('cancel-account', cancel_token) %}
    <strong>You can cancel your account by</strong> <a href="{{ url }}" title="Remove your account" style="color: #9dce0a">clicking here</a>
    {% endtrans %}
{% endblock %}
